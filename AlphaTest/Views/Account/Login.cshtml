@model AlphaTest.Models.LoginModel

@{
    ViewBag.Title = "Вход в систему";
}

<h2>@ViewBag.Title</h2>
<div class="row justify-content-start">
    <div class="col-3">
        @using (Html.BeginForm(null, null, FormMethod.Post, new {@class = "needs-validation", novalidate = ""}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(m => m.Login)
                @Html.TextBoxFor(m => m.Login, new {@class = "form-control", placeholder = "Логин", required = ""})
                @Html.ValidationMessageFor(m => m.Login)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Пароль", required = ""})
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <button type="submit" class="btn btn-primary">Войти</button>
        }
        <p>
            @Html.ActionLink("Зарегистрируйтесь", "Register"), если у вас нет аккаунта
        </p>
    </div>
</div>