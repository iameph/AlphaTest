@model AlphaTest.Models.User

@{
    ViewBag.Title = ViewBag.User == null ? "Вход" : "Личный кабинет";
}

<h2>@ViewBag.Title</h2>
@ViewBag.Text

@if (ViewBag.User != null)
{
    string action = ViewBag.User.IsAdmin ? "Admin" : "User";
    <p>Вы авторизованы как <strong>@ViewBag.User.Name</strong></p>
    <p>@Html.ActionLink("Заявки", "Index", action)</p>
    <p>@Html.ActionLink("Выйти", "Exit")</p>
}
else
{
    <p>Вы не авторизованы</p>
    <p>@Html.ActionLink("Войдите", "Login") или @Html.ActionLink("зарегистрируйтесь", "Register") </p>
}
