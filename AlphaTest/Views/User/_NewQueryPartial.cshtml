@using AlphaTest.Extensions
@model AlphaTest.Models.CreateQueryModel


<div class="row justify-content-start">
    <div class="col-6">
        @using (Html.BeginForm("Create", "User", FormMethod.Post, new {@class = "needs-validation", novalidate = ""}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(m => m.Category)
                @Html.DropDownList("Category", Model.Category.ToSelectList((int) Model.Category))
                @Html.ValidationMessageFor(m => m.Category)
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Text)
                @Html.TextAreaFor(m => m.Text,new {@class = "form-control", placeholder = "Текст заявки", required = ""})
                @Html.ValidationMessageFor(m => m.Text)
            </div>
            <button type="submit" class="btn btn-primary">Создать заявку</button>
        }
    </div>
</div>


