@using AlphaTest.Extensions
@model AlphaTest.Models.UserQueriesModel

@{
    ViewBag.Title = "Создать заявку";
}

<h2>Создать заявку</h2>
@Html.Partial("_NewQueryPartial", Model.NewQuery)

<div class="queries">
    <h3>Созданные заявки</h3>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th scope="col">Номер заявки</th>
            <th scope="col">Дата заявки</th>
            <th scope="col">Статус заявки</th>
            <th scope="col">Текст заявки</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var q in Model.Queries)
        {
            <tr>
                <td>
                    <p>@q.Id</p>
                </td>
                <td>
                    <p>@q.QueryDate</p>
                </td>
                <td>
                    <p>@q.State.DisplayName()</p>
                </td>
                <td>
                    <p>@q.Text</p>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>